package paquete;

import java.io.File;
import java.io.FileNotFoundException;
import java.util.ArrayList;
import java.util.Scanner;

public class Limitrofes {

	private ArrayList<Pais> paises = new ArrayList<Pais>();
	private ArrayList<String> tranlimitrofes = new ArrayList<>();

	public Limitrofes(String entrada) throws FileNotFoundException {
		Scanner in = new Scanner(new File(entrada));

		int cantidad = in.nextInt();
		in.nextLine();

		for (int i = 0; i < cantidad; i++) {
			Pais pais = new Pais(in.next());
			Pais limitrofe = new Pais(in.next());

			if (paises.contains(pais))
				paises.get(paises.indexOf(pais)).agregarLimitrofe(limitrofe.getNombre());
			else {
				pais.agregarLimitrofe(limitrofe.getNombre());
				paises.add(pais);
			}

			if (paises.contains(limitrofe))
				paises.get(paises.indexOf(limitrofe)).agregarLimitrofe(pais.getNombre());
			else {
				limitrofe.agregarLimitrofe(pais.getNombre());
				paises.add(limitrofe);
			}
		}
		// System.out.println(paises.toString());
		paises.sort(new ComparePais());
		 for (Pais pais : paises) {
		 System.out.println(pais.getNombre() + " " + pais.cantidadLimitrofes());
		 }

		in.close();
	}

	public void translimitrofes() {
		for (Pais paisX : paises) {
			for (Pais paisY : paises) {
				if (!paisX.equals(paisY)) {
					for (Pais paisZ : paises) {
						if (!paisY.equals(paisZ) && !paisX.equals(paisZ)) {
							if (paisX.limitaCon(paisY) && paisY.limitaCon(paisZ) && !paisX.limitaCon(paisZ)) {
								String cadena = paisX.getNombre() + " " + paisZ.getNombre();
								String invertida = paisZ.getNombre() + " " + paisX.getNombre();
								if (!this.tranlimitrofes.contains(cadena) && !this.tranlimitrofes.contains(invertida))
									this.tranlimitrofes.add(cadena);
							}
						}
					}
				}
			}
		}
		if (this.tranlimitrofes.size() > 0)
			for (String string : tranlimitrofes) {
				System.out.println(string);
			}
		else
			System.out.println("No hay paises translimitrofes");
	}

	public static void main(String[] args) {

		Limitrofes l;
		try {
			l = new Limitrofes("paises.in");
			l.translimitrofes();
		} catch (FileNotFoundException evento) {
			System.out.println(evento.getMessage());
			evento.printStackTrace();
		}
	}

}
