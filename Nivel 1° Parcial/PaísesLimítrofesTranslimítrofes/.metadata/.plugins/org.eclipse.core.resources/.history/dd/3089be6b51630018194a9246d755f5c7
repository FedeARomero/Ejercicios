package paquete;

import java.io.File;
import java.io.FileNotFoundException;
import java.util.ArrayList;
import java.util.Scanner;

public class Limitrofes {
	
	private ArrayList<Pais> paises;
	
	public Limitrofes(String entrada) throws FileNotFoundException {
		Scanner in = new Scanner(new File(entrada));
		int cantidad = in.nextInt();
		in.nextLine();
		for (int i = 0; i < cantidad; i++) {
			Pais pais = new Pais(in.next());
			pais.agregarLimitrofe(in.next());
			System.out.println(pais);
			paises.add(pais);
		}
		in.close();
	}
	
	public void mostrar() {
		for (int i = 0; i < paises.size(); i++) {
			System.out.println(paises.get(i).getNombre());
		}
	}

	public static void main(String[] args) {
		
		Limitrofes l;
		try {
			l = new Limitrofes("paises.in");
//			l.mostrar();
		} catch (FileNotFoundException evento) {
			System.out.println(evento.getMessage());
			evento.printStackTrace();
		}
	}

}
